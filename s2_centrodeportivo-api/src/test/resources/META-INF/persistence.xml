<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="CentroDeportivoPU" transaction-type="JTA">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <!--Toca entity por entity, exclude-unlisted-clases = false no funciona-->
    <class>co.edu.uniandes.csw.centrodeportivo.entities.DeportistaEntity</class>
    <class>co.edu.uniandes.csw.centrodeportivo.entities.EjercicioEntity</class>
    <class>co.edu.uniandes.csw.centrodeportivo.entities.EspecialistaEntity</class>
    <class>co.edu.uniandes.csw.centrodeportivo.entities.ImplementoEntity</class>
    <class>co.edu.uniandes.csw.centrodeportivo.entities.MaquinaEntity</class>
    <class>co.edu.uniandes.csw.centrodeportivo.entities.ObjetivoEntity</class>
    <class>co.edu.uniandes.csw.centrodeportivo.entities.RutinaEntity</class>
    <class>co.edu.uniandes.csw.centrodeportivo.entities.SeguimientoEntity</class>
    <class>co.edu.uniandes.csw.centrodeportivo.entities.ZonaCuerpoEntity</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <shared-cache-mode>NONE</shared-cache-mode>
    <properties>
      <property name="eclipselink.ddl-generation" value="drop-and-create-tables"/>
      <property name="eclipselink.target-database" value="Derby"/>
      <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.ClientDriver"/>
      <property name="javax.persistence.jdbc.url" value="jdbc:derby://{{ip}}:1527/bookstore"/>
      <property name="javax.persistence.jdbc.user" value="APP"/>
      <property name="javax.persistence.jdbc.password" value="APP"/>
      <property name="eclipselink.logging.level" value="FINE"/>
      <property name="eclipselink.logging.parameters" value="true"/>
    </properties>
  </persistence-unit>
</persistence>
